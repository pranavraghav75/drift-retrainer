FROM python:3.10-slim

# 1) set the working dir inside the container
WORKDIR /app

# 2) install your Python deps
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 3) copy your model code & API code in
COPY src/ src/
COPY inference/ inference/

# 4) expose the port youâ€™re going to serve on
EXPOSE 8000

# 5) run via gunicorn, pointing at inference/app.py's Flask "app"
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "inference.app:app"]